
node('java-agent-01') {

    stage('Checkout SCM'){
        git branch: 'main', url: 'https://github.com/ahmednasr122/jenkins-test'
    }

    stage('Build App'){
        sh 'mvn clean package -DskipTests'
    }

    stage('Archive App'){
        archiveArtifacts artifacts: '**/*.jar'
    }

    stage('Build Docker Image'){
        sh "docker build -t ahmednasr12/java01:v${BUILD_NUMBER} ."
    }
}
